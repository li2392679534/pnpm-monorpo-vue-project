    "@storybook/vue3-vite": "^9.1.2",
    "@vitejs/plugin-vue": "^4.0.0",
    "eslint-plugin-storybook": "^9.1.2",
    "storybook": "^9.1.2",
    "vite": "^7.1.3",
    "vue-tsc": "^1.0.0",
    "vitest": "^3.2.4",
